---
import type { HTMLAttributes } from "astro/types";

interface Props extends HTMLAttributes<"a"> {
  noLogo?: boolean;
}

const { noLogo, ...restProps } = Astro.props;
---

<a
  {...restProps}
  class="inline-flex items-center rounded-sm border border-[#2a3b52] bg-[#243041] p-1 text-sm leading-4 text-[#d4c4a8] no-underline hover:bg-[#2a3b52] transition-colors"
  rel="noopener noreferrer"
  target="_blank"
>
  {noLogo && <span class="h-4 mr-1" />}
  <slot />
</a>
